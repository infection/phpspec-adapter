{
    "$schema": "var/tools/infection.phar/ressources/schema.json",
    "source": {
        "directories": [
            "src"
        ]
    },
    "tmpDir": "var/infection",
    "logs": {
        "text": "var/infection.log"
    },
    "mutators": {
        "@default": true,
        "global-ignore": [
            "Infection\\TestFramework\\PhpSpec\\PhpSpecAdapterFactory::createDefaultCoverageXmlDirectoryPath"
        ],

        "ArrayItemRemoval": {
            "ignore": [
                // There is currently not an easy way to cover this mutation.
                "Infection\\TestFramework\\PhpSpec\\Version\\ProcessVersionProvider::get",
            ]
        },
        "IfNegation": {
            "ignore": [
                // TODO: fix this one
                "Infection\\TestFramework\\PhpSpec\\Config\\MutationConfigBuilder::getInterceptorFileContent"
            ]
        },
        "Ternary": {
            "ignoreSourceCodeByRegex": [
                // This is polyfill code â€“ not interesting
                ".*file_get_contents\\(\\$testFrameworkConfigPath\\).*"
            ]
        }
    }
}